# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# vLLM Inference Endpoints (self-hosted)
VLLM_ASR_BASE_URL=http://localhost:8001/v1
VLLM_LLM_BASE_URL=http://localhost:8002/v1
VLLM_TTS_BASE_URL=http://localhost:8003/v1
VLLM_SHADOW_BASE_URL=http://localhost:8004/v1

# Model Names
ASR_MODEL=Qwen/Qwen3-ASR-0.6B
LLM_MODEL=Qwen/Qwen3-8B
TTS_MODEL=Qwen/Qwen3-TTS-12Hz-0.6B-CustomVoice
SHADOW_MODEL=Qwen/Qwen3-32B

# Redis
REDIS_URL=redis://localhost:6379

# PostgreSQL
DATABASE_URL=postgresql://callbot:callbot@localhost:5432/callbot

# Server
API_HOST=0.0.0.0
API_PORT=8000
WS_HOST=0.0.0.0
WS_PORT=8765

# Public URL (for Twilio webhooks - use ngrok in development)
PUBLIC_BASE_URL=https://your-domain.ngrok-free.app

# Latency Optimizations
VAD_THRESHOLD_MS=200
AUDIO_SAMPLE_RATE=8000
AUDIO_FORMAT=mulaw
